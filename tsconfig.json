{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build/esm",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "composite": false,
    "types": ["node"],
    "noEmit": true,
    "noEmitOnError": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "skipLibCheck": true,

    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitHelpers": true,
    "noImplicitUseStrict": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,

    "lib": ["dom", "dom.iterable", "esnext"]
  }
}
